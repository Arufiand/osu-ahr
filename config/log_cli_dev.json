{
  "appenders": {
    "console": {
      "type": "console"
    },
    "console_f": {
      "type": "logLevelFilter",
      "level": "info",
      "appender": "console"
    },
    "file_all": {
      "type": "multiFile",
      "base": "logs/all",
      "property": "channel",
      "extension": ".log"
    },
    "file_all_f": {
      "type": "logLevelFilter",
      "level": "trace",
      "appender": "file_all"
    },
    "file_irc": {
      "type": "file",
      "filename": "logs/irc.log"
    },
    "file_cli": {
      "type": "multiFile",
      "base": "logs/cli",
      "property": "channel",
      "extension": ".log"
    },
    "file_cli_f": {
      "type": "logLevelFilter",
      "level": "info",
      "appender": "file_cli"
    },
    "file_pm": {
      "type": "file",
      "filename": "logs/pm.log"
    },
    "file_counter": {
      "type": "file",
      "filename": "logs/ct.log"
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "console_f",
        "file_all_f",
        "file_cli_f"
      ],
      "level": "all"
    },
    "irc": {
      "appenders": [
        "console_f",
        "file_all_f",
        "file_irc"
      ],
      "level": "all"
    },
    "chat": {
      "appenders": [
        "console",
        "file_cli"
      ],
      "level": "all"
    },
    "PMLogger": {
      "appenders": [
        "console",
        "file_pm",
        "file_cli"
      ],
      "level": "all"
    },
    "wcounter": {
      "appenders": [
        "file_counter"
      ],
      "level": "all"
    }
  }
}