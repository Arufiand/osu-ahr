{
  "appenders": {
    "console": {
      "type": "console"
    },
    "console_f": {
      "type": "logLevelFilter",
      "level": "info",
      "appender": "console"
    },
    "file_all": {
      "type": "file",
      "filename": "logs/all.log"
    },
    "file_all_f": {
      "type": "logLevelFilter",
      "level": "trace",
      "appender": "file_all"
    },
    "file_irc": {
      "type": "file",
      "filename": "logs/irc.log"
    },
    "file_chat": {
      "type": "file",
      "filename": "logs/chat.log"
    },
    "file_pm": {
      "type": "file",
      "filename": "logs/pm.log"
    },
    "file_counter": {
      "type": "file",
      "filename": "logs/ct.log"
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "console_f",
        "file_all_f"
      ],
      "level": "all"
    },
    "irc": {
      "appenders": [
        "console_f",
        "file_all_f",
        "file_irc"
      ],
      "level": "all"
    },
    "chat": {
      "appenders": [
        "console",
        "file_chat"
      ],
      "level": "all"
    },
    "PMLogger": {
      "appenders": [
        "console",
        "file_pm"
      ],
      "level": "all"
    },
    "wordCounter": {
      "appenders": [
        "file_counter"
      ],
      "level": "all"
    }
  }
}